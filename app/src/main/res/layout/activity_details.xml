<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15sp"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvTitleHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:ellipsize="end"
                android:fontFamily="@font/pingfang"
                android:gravity="center_horizontal"
                android:text="TITLE"
                android:textAlignment="center"
                android:textColor="#4B3F3F"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/underline"
                android:layout_width="140dp"
                android:layout_height="5sp"
                android:layout_below="@id/tvTitleHome"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:src="@drawable/bkgrnd" />

            <TextView
                android:id="@+id/tvVerseHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/underline"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/pingfang"
                android:text="Verse"
                android:textColor="#4B3F3F" />


            <TextView
                android:id="@+id/tvDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvVerseHome"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/pingfang"
                android:gravity="start"
                android:padding="6sp"
                android:textSize="25sp"
                android:text="DESCRIPTION"
                android:textAlignment="textStart"
                android:textColor="#000000" />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>